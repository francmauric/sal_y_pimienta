<!DOCTYPE html>
<html>
  <head>
    <title>Pimienta & sal</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <!-- Navbar (sit on top) -->
    <nav class="ps-top">
      <div class="ps-bar ps-white ps-padding ps-card ps-nav">
        <a href="#home" class="ps-bar-item ps-button">Pimienta & Sal</a>
        <!-- Right-sided navbar links. Hide them on small screens -->
        <div class="ps-right ps-hide-small">
          <a href="#about" class="ps-bar-item ps-button">About</a>
          <a href="#menu" class="ps-bar-item ps-button">Menu</a>
        </div>
      </div>
    </nav>

    <!-- Header -->
    <header class="ps-display-container ps-content ps-wide" id="home">
      <img
        class="ps-image"
        src="/images/header.jpg"
        alt="Pimienta & Sal"
        width="1600"
        height="800"
      />
      <div class="ps-display-bottomleft ps-padding-large ps-opacity">
        <h1 class="ps-xxlarge">Sabores que enamoran</h1>
      </div>
    </header>

    <!-- Page content -->
    <div class="ps-content">
    <% if (detallePlato != undefined) { %>
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= detallePlato.plato %> </h1>
          <br />
          <h4><%= detallePlato.descripcion %> </h4>
          <p class="ps-text-grey">
           <%= detallePlato.precio %> 
          </p>
        </div>
        <% } else { %>
          <div class="ps-row ps-padding-64" id="menu">
            <div class="ps-col l6 ps-padding-large">
              <h1 class="ps-center">Producto no encontrado </h1>
              <br />
              <h4> </h4>
              <p class="ps-text-grey">
                
              </p>
            </div>
    <% } %>

      <!-- Menu Section -->
      

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <% if (detallePlato.id === 1) { %>
            <img 
            src="/images/Carpaccio-de-salmon.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu" />
         <% } else if (detallePlato.id===2) { %>
          <img 
            src="/images/Risotto-berenjena-queso-cabra.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu" />
            <% } else if (detallePlato.id===3) { %>
              <img 
              src="/images/Mousse-de-arroz-con-leche.jpg"
              class="ps-round ps-image ps-opacity-min"
              alt="Menu" />
              <% } else { %>
                <img 
                src="/images/esparragos.png"
                class="ps-round ps-image ps-opacity-min"
                alt="Menu" />
          <% } %>
         
        </div>
      </div>

      <!-- Footer -->
      <footer class="ps-center ps-light-grey ps-padding-32">
        <p>Powered by Pimienta & Sal</p>
      </footer>
    </div>
  </body>
</html>
